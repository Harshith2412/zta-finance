# Application
APP_NAME=ZTA-Finance
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Database (MySQL)
DATABASE_URL=mysql://zta_user:your_db_password@localhost:3306/zta_finance
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password

# Redis
REDIS_URL=redis://:your_redis_password@localhost:6379/0
REDIS_PASSWORD=your_redis_password

# Security - Generate these with: python scripts/generate_keys.py
JWT_SECRET_KEY=your-secret-key-min-32-chars-long-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-base64-encoded-32-byte-key
ENCRYPTION_ALGORITHM=AES-256-GCM

# MFA
MFA_ISSUER=ZTA-Finance
MFA_REQUIRED=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Session Management
SESSION_TIMEOUT_MINUTES=30
MAX_FAILED_LOGIN_ATTEMPTS=5
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# Risk Scoring
RISK_THRESHOLD_LOW=30
RISK_THRESHOLD_MEDIUM=60
RISK_THRESHOLD_HIGH=80

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_ENCRYPTION=True

# Device Verification
DEVICE_FINGERPRINT_REQUIRED=True
TRUSTED_DEVICE_DURATION_DAYS=30
